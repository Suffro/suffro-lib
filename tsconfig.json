{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    //
    // → Emuliamo il comportamento di Node 18+ ESM,  
    //   così TS emette import “./_types.js” anziché “./_types”
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "declarationDir": "dist/types",
    
    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
